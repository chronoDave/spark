{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["ESNext", "DOM"],
    "module": "esnext",
    "moduleResolution": "bundler",

    "jsx": "react",
    "jsxFactory": "spark.createElement",
    
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "allowSyntheticDefaultImports": true,

    "declaration": true,
    "outDir": "./test/build"
  },
  "include": [
    "src",
    "test",
    "scripts",
    ".eslintrc.js",
    "rollup.config.js"
  ]
}