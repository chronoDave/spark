{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext", "dom"],
    "module": "Node16",
    "moduleResolution": "node16",
    "allowImportingTsExtensions": true,

    "jsx": "react",
    "jsxFactory": "spark.createElement",
    
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "noEmit": true,
    "outDir": "./test/build"
  },
  "include": [
    "src",
    "test",
    "scripts",
    ".eslintrc.js",
    "rollup.config.js"
  ]
}