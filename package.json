{
  "name": "@chronocide/spark",
  "version": "0.0.6",
  "description": "Simple JSX templating",
  "main": "dist/spark.cjs",
  "module": "dist/spark.mjs",
  "types": "dist/spark.d.ts",
  "exports": {
    ".": {
      "import": "./dist/spark.mjs",
      "require": "./dist/spark.cjs"
    }
  },
  "keywords": [],
  "files": [
    "dist/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/chronoDave/spark.git"
  },
  "author": "Chronocide",
  "license": "GPL-3.0",
  "engines": {
    "node": ">=18.17.1"
  },
  "scripts": {
    "lint": "eslint src",
    "build": "rollup -c",
    "prepublishOnly": "npm run lint && npm run test",
    "test": "node scripts/tape.js && tape build/**/*.spec.js"
  },
  "devDependencies": {
    "@types/tape": "^5.6.1",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "esbuild": "^0.19.3",
    "eslint": "^8.49.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "rollup": "^3.29.2",
    "rollup-plugin-dts": "^6.0.2",
    "rollup-plugin-esbuild": "^5.0.0",
    "tape": "^5.6.6",
    "typescript": "^5.2.2"
  }
}
